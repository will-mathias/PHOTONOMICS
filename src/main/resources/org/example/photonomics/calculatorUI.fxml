<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.photonomics.CalculatorController"
      alignment="CENTER"
      spacing="15"
      style="-fx-padding: 20;">

    <Label text="Solar Cost Calculator"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="energyUsageField" promptText="Energy Usage (kWh/month)" maxWidth="300"/>
    <TextField fx:id="HouseholdIncomeField" promptText="Household Income ($/month)" maxWidth="300"/>
    <TextField fx:id="loanTermField" promptText="Loan Term (years)" maxWidth="300"/>
    <TextField fx:id="interestRateField" promptText="Interest Rate (%)" maxWidth="300"/>
    <ChoiceBox fx:id="regionDropDown" maxWidth="300"/>
    <Button text="Calculate" onAction="#onCalculateButtonClick" maxWidth="150"/>
    <ScrollPane maxWidth="600" prefHeight="400">
        <content>
            <VBox fx:id="outputBox" spacing="10"/>
        </content>
    </ScrollPane>
</VBox>




