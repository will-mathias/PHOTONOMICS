<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.photonomics.CalculatorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox alignment="TOP_CENTER" prefHeight="59.0" prefWidth="360.0">
      <children>
         <VBox layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0">
            <children>
               <Label alignment="CENTER" prefHeight="40.0" prefWidth="100.0" text="Monthly Energy Usage (kWh)" textAlignment="CENTER" wrapText="true" />
               <TextField fx:id="energyUsageField" layoutX="10.0" layoutY="50.0" />
            </children>
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin>
         </VBox>
         <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
               <Label alignment="CENTER" prefHeight="41.0" prefWidth="100.0" text="Household Income (USD)" textAlignment="CENTER" wrapText="true" />
               <TextField fx:id="HouseholdIncomeField" />
            </children>
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin>
         </VBox>
         <VBox layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0">
            <children>
               <Label alignment="CENTER" prefHeight="44.0" prefWidth="100.0" text="County" textAlignment="CENTER" />
               <ChoiceBox fx:id="regionDropDown" prefWidth="150.0" />
            </children>
         </VBox>
      </children>
   </HBox>
    <Button onAction="#onCalculateButtonClick" text="Calculate" />
   <VBox fx:id="outputBox" alignment="TOP_CENTER" prefHeight="800.0" prefWidth="600.0" />
</VBox>
