<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.photonomics.CalculatorController"
      alignment="TOP_CENTER"
      spacing="20"
      style="-fx-padding: 25; -fx-background-color: #f5f5f5;">

    <!-- Header -->
    <Label text="ðŸŒž Photonomics Solar Cost Calculator"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <!-- Input fields container -->
    <VBox spacing="12" maxWidth="350">
        <TextField fx:id="energyUsageField" promptText="Energy Usage (kWh/month)"/>
        <TextField fx:id="HouseholdIncomeField" promptText="Household Income ($/month)"/>
        <TextField fx:id="loanTermField" promptText="Loan Term (years)"/>
        <TextField fx:id="interestRateField" promptText="Interest Rate (%)"/>
        <ChoiceBox fx:id="regionDropDown" maxWidth="300"/>
        <Button text="Calculate"
                onAction="#onCalculateButtonClick"
                style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"/>
    </VBox>

    <!-- Output ScrollPane -->
    <ScrollPane maxWidth="600" prefHeight="500" fitToWidth="true" style="-fx-background-color: transparent;">
        <content>
            <VBox fx:id="outputBox" spacing="10"/>
        </content>
    </ScrollPane>
</VBox>




