<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.photonomics.CalculatorController"
      alignment="CENTER"
      spacing="15"
      style="-fx-padding: 20; -fx-font-size: 14px;">

    <Label text="Photonomics Calculator"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="energyUsageField"
               promptText="Monthly Energy Usage (kWh)"
               maxWidth="300"/>

    <TextField fx:id="HouseholdIncomeField"
               promptText="Household Income (USD)"
               maxWidth="300"/>

    <ChoiceBox fx:id="regionDropDown"
               maxWidth="300"/>

    <Button text="Calculate"
            onAction="#onCalculateButtonClick"
            maxWidth="200"/>

    <VBox fx:id="outputBox"
          spacing="10"
          style="-fx-border-color: lightgray;
                 -fx-border-radius: 5;
                 -fx-padding: 10;"
          maxWidth="400"/>

</VBox>
